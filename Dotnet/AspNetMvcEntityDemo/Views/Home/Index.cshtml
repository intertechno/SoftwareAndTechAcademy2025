@model List<Customer>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Northwind Customers</h1>
</div>

<form method="post">
    <p>Company name:</p>
    <input type="text" class="form-control" name="companySearch" />

    <p>Country:</p>
    <input type="text" class="form-control" name="countrySearch" />

    <input type="submit" class="btn btn-primary" value="Search" />
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Company name</th>
            <th>Contact name</th>
            <th>Country</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CompanyName</td>
                <td>@c.ContactName</td>
                <td>@c.Country</td>
            </tr>
        }
    </tbody>
</table>
